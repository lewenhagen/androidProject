<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidproject.androidapplication" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.androidproject.androidapplication.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androidproject.androidapplication.DetailedView"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_detailed_view"
            android:theme="@style/FullscreenTheme"
            android:screenOrientation="portrait">>
        </activity>
        <activity
            android:name="com.androidproject.androidapplication.ResultView"
            android:label="@string/title_activity_result_view"
            android:screenOrientation="portrait">>
        </activity>
    </application>

</manifest>
